<!DOCTYPE html>
<html>
<head>
    {{!-- Document Settings --}}
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    {{!-- Page Meta --}}
    <title>{{meta_title}}</title>

    {{!-- Mobile Meta --}}
    <meta name="HandheldFriendly" content="True" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">

    {{!-- Brand icon --}}
    <link rel="shortcut icon" href="{{asset "favicon.ico"}}">

    {{!-- Styles'n'Scripts --}}
    <link rel="stylesheet" type="text/css" href="{{asset "css/base.css"}}" />
    <link rel="stylesheet" type="text/css" href="{{asset "css/kg.css"}}" />
    <link rel="stylesheet" type="text/css" href="{{asset "css/common.css"}}" />
    <link rel="stylesheet" type="text/css" href="{{asset "css/archives.css"}}" />
    <link rel="stylesheet" type="text/css" href="{{asset "css/tag.css"}}" />
    {{!-- {{#is "index"}}<link rel="stylesheet" type="text/css" href="{{asset "css/index.css"}}" />{{/is}} --}}
    <link rel="stylesheet" type="text/css" href="{{asset "css/index.css"}}" />
    {{#is "post"}}
    {{!-- <link rel="stylesheet" type="text/css" href="{{asset "css/vue.css"}}" /> --}}
    <link rel="stylesheet" type="text/css" href="{{asset "css/post.css"}}" />
    {{/is}}
    {{!-- {{#is "archives"}}{{/is}} --}}
    {{!-- Ghost outputs important style and meta data with this tag --}}
    {{ghost_head}}
</head>
<body>

    <div id="wrapper">
        {{!-- All the main content gets inserted here, index.hbs, post.hbs, etc --}}
        {{{body}}}
    </div>

    {{!-- jQuery needs to come before `{{ghost_foot}}` so that jQuery can be used in code injection --}}
    {{!--<script type="text/javascript" src="//code.jquery.com/jquery-1.12.0.min.js"></script>--}}
    {{!-- Ghost outputs important scripts and data with this tag --}}
    {{ghost_foot}}
    {{!-- The main JavaScript file for Casper --}}
    <script type="text/javascript" src="{{asset "js/index.js"}}"></script>
    {{#is "post"}}
    <script src="https://cdn.bootcss.com/highlight.js/9.12.0/highlight.min.js"></script>
    <script type="text/javascript" src="{{asset "js/post.js"}}"></script>
    {{/is}}
    <script>
        var _hmt = _hmt || [];
        (function (baidu_tongji) {
            if(!baidu_tongji){
                return false
            }
            var hm = document.createElement("script");
            hm.src = "https://hm.baidu.com/hm.js?"+baidu_tongji;
            var s = document.getElementsByTagName("script")[0];
            s.parentNode.insertBefore(hm, s);
        })(window.baidu_tongji);
    </script>
</body>
</html>
